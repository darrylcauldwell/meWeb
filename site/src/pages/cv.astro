import { meAccentColor } from '../config/colors';

// Structured data for SEO
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Darryl Cauldwell",
  "jobTitle": "Customer Success Architect",
  "worksFor": {
    "@type": "Organization",
    "name": "VMware"
  },
  "url": "https://blog.dreamfold.dev",
  "sameAs": [
    "https://linkedin.com/in/darrylcauldwell",
    "https://github.com/darrylcauldwell"
  ],
  "knowsAbout": ["VMware", "Kubernetes", "Cloud Architecture", "NSX", "AWS", "Terraform", "Ansible", "DevOps"],
  "alumniOf": ["Royal Mail", "CSC", "Atos", "DXC Technology", "VMware"]
